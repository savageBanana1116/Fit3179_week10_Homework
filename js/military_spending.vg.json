{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 600,
  "title": {"text": "Military spending by country 2022", "frame": "group"},
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/savageBanana1116/Fit3179_week10_Homework/main/data/military_spending_by_country.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {"type": "filter", "expr": "datum.Spending > 0"},
        {"type": "filter", "expr": "datum.Population > 0"},
        {
          "type": "filter",
          "expr": "Continent_selection == null || datum.Continent == Continent_selection"
        },
        {
          "type": "formula",
          "expr": "round(datum.Spending/datum.Population * 10000)",
          "as": "Military Spending per 10,000 Population"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"Population\"]) && isFinite(+datum[\"Population\"]) && isValid(datum[\"Spending\"]) && isFinite(+datum[\"Spending\"])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"Population\"]) && isFinite(+datum[\"Population\"]) && isValid(datum[\"Spending\"]) && isFinite(+datum[\"Spending\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "symbol",
      "style": ["circle"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "opacity": {"value": 0.6},
          "fill": {"scale": "color", "field": "Continent"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Military Spending($US)\": format(datum[\"Spending\"], \",\"), \"Military Spending per 10,000 Population\": format(datum[\"Military Spending per 10,000 Population\"], \",\")}"
          },
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"Country Population: \" + (format(datum[\"Population\"], \"\")) + \"; Military Spending($US): \" + (format(datum[\"Spending\"], \"\")) + \"; Continent: \" + (isValid(datum[\"Continent\"]) ? datum[\"Continent\"] : \"\"+datum[\"Continent\"]) + \"; Population: \" + (format(datum[\"Population\"], \".1s\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Military Spending per 10,000 Population: \" + (format(datum[\"Military Spending per 10,000 Population\"], \",\"))"
          },
          "x": {"scale": "x", "field": "Population"},
          "y": {"scale": "y", "field": "Spending"},
          "size": {"scale": "size", "field": "Population"},
          "shape": {"value": "circle"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "align": {"value": "right"},
          "baseline": {"value": "middle"},
          "dx": {"value": -11},
          "fontSize": {"value": 13.5},
          "fontStyle": {"value": "italic"},
          "fill": {"value": "black"},
          "opacity": [
            {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'India' || datum['Country'] == 'Australia' || datum['Country'] == 'South Korea' || datum['Country'] == 'Oman' || datum['Country'] == 'Russia' ||  datum['Country'] == 'United States'||  datum['Country'] == 'Laos'",
              "value": 1
            },
            {"value": 0}
          ],
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Military Spending($US)\": format(datum[\"Spending\"], \",\"), \"Military Spending per 10,000 Population\": format(datum[\"Military Spending per 10,000 Population\"], \",\")}"
          },
          "description": {
            "signal": "\"Country Population: \" + (format(datum[\"Population\"], \"\")) + \"; Military Spending($US): \" + (format(datum[\"Spending\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Military Spending per 10,000 Population: \" + (format(datum[\"Military Spending per 10,000 Population\"], \",\"))"
          },
          "x": {"scale": "x", "field": "Population"},
          "y": {"scale": "y", "field": "Spending"},
          "text": {
            "signal": "isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "log",
      "domain": [5000, 2000000000],
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "log",
      "domain": [11000000, 980000000000],
      "range": [{"signal": "height"}, 0]
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "North America",
        "South America",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
      ],
      "range": [
        "#e41a1c",
        "#984ea3",
        "#ff7f00",
        "#a6cee3",
        "#31b035",
        "#a65628"
      ]
    },
    {
      "name": "size",
      "type": "threshold",
      "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
      "range": [50, 150, 200, 300, 400]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "tickCount": 4,
      "gridScale": "y",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "tickCount": 4,
      "gridScale": "x",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Country Population",
      "tickCount": 4,
      "labelFlush": true,
      "labelOverlap": "greedy",
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Military Spending($US)",
      "tickCount": 4,
      "labelOverlap": "greedy",
      "zindex": 0
    }
  ],
  "legends": [
    {
      "fill": "color",
      "symbolType": "circle",
      "title": "Continent",
      "encode": {"symbols": {"update": {"opacity": {"value": 0.6}}}}
    },
    {
      "format": ".1s",
      "size": "size",
      "labelOverlap": "greedy",
      "symbolType": "circle",
      "title": "Population",
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "black"},
            "fillOpacity": {"value": 0.6},
            "opacity": {"value": 0.6},
            "stroke": {"value": "transparent"}
          }
        }
      }
    }
  ],
  "config": {}
}